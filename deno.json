{
  "name": "@dunno/obfuscate-mail",
  "version": "1.5.1",
  "exports": {
    ".":"./mod.ts",
    "./wasm":"./mod.wasm",
    "./test":"./test/main.ts",
    "./bundle/mjs":"./bundle/esm.js",
    "./bundle/esm":"./bundle/esm.js",
    "./bundle/cjs":"./bundle/cjs.js"
  },
  "tasks":{
    "prepublish": {
      "description": "Prepublish script",
      "command": "deno fmt; deno lint"
    },
    "bundle": {
      "description": "Bundle `mod.ts` into esm, cjs (idk), and wasm",
      "command": "deno run --allow-read --allow-write ./build/main.ts"
    }
  },
  "test":{"include":["test/main.ts"]},
  "lint": {
    "include":["**/*.ts", "test/**/*.json"],
    "rules": {
      "tags":["recommended"]
    }
  }
  "fmt":{
    "include":["**/*.ts", "test/**/*.json"],
    "lineWidth": 80,
    "singleQuote": true
  },
  "publish":{"include":["**/*.ts", "**/*.wasm", "test/**/*.json", "README.md", "LICENSE"]}
}
