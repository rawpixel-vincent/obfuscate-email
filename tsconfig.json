{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2021",
    "lib": ["es2021"],
    "checkJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outFile": "index.d.ts",
    "moduleResolution": "node",
    "noStrictGenericChecks": true
  },
  "include": ["*.js"],
  "exclude": ["*.d.ts", "node_modules"]
}
